{
  "plugins": [
    "meteor",
    "import"
  ],
  "extends": [
    "standard"
  ],
  "env": {
    "mocha": true,
    "node": true
  },
  "globals": {
    "browser": true,
    "server": true,
    "expect": true,
    "beforeEach": true
  },
  "rules": {
    "callback-return": 2,
    "arrow-parens": 2,
    "semi": [
      2,
      "always"
    ],
    "no-multiple-empty-lines": 2,
    "space-before-function-paren": 2,
    "no-var": 2,
    "prefer-template": 2
  }
}
